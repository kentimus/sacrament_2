@model SacramentPlanner.Models.Speaker

@{
    ViewData["Title"] = "Delete Speaker";
}

<h1 class="mt-5">Delete Speaker</h1>

<h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingID)
        </dt>
        <dd class = "col-sm-10">
            
            @ViewBag.MeetingDate

        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpeakerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpeakerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SpeakerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
