@model IEnumerable<SacramentPlanner.Models.Meeting>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConductingLeader)
            </th>
            <th>
                Speakers
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConductingLeader)
            </td>
            <td>
            @foreach(Speaker s in item.Speakers)
            {
                @s.SpeakerName
                @:<br />
            }


          
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.MeetingID">Edit</a> 
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.MeetingID">Details</a> 
                <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.MeetingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
